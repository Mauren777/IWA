{% extends 'layout.twig' %}

{% block body %}

{# <pre>
{{ dump() }}
</pre> #}

<div class="container">
    <div class="row">
        <div class="col-md-12">        
            <table class="table mt-5 mb-5">
                <thead>
                    <tr>
                        <th style="width:10%">#</th>
                        <th style="width:60%">Title</th>
                        <th style="width:15%"></th>
                        <th style="width:15%"></th>
                    </tr>
                </thead>
                <tbody>
                    {% for article in articles %}
                    <tr>
                        <th scope="row">{{ article['$'].id }}</th>
                        <td>{{ article.title }}</td>
                        <td><a href="/edit/{{ article['$'].id }}" class="btn btn-secondary btn-sm"><i class="fas fa-pen-square"></i> Edit</a></td>
                        <td><a href="/delete/{{ article['$'].id }}" class="btn btn-danger btn-sm"><i class="fas fa-trash"></i> Delete</a></td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>
{% endblock %}