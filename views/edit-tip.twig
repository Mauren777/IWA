{% extends 'layout.twig' %}

{% block body %}

    <div class="container my-5">
        <div class="row">
            <div class="col-md-12">
                <div class="card mb-5">
                    <div class="card-body">
                        <form action="/edit/{{ tip['$'].id }}" method="post">
                            <div class="form-group">
                                <label>ID</label>
                                <input class="form-control" type="text" placeholder="{{ tip['$'].id }}" readonly>
                            </div>
                            <div class="form-group">
                                <label for="tip_title">Title</label>
                                <input type="text" class="form-control" id="tip_title" name="tip_title" value="{{ tip.title }}">
                            </div>
                            <div class="form-group">
                                <label for="tip_image">Image</label>
                                <input type="text" class="form-control" id="tip_image" name="tip_image" value="{{ tip.image }}">
                            </div>
                            <div class="form-group">
                                <label for="tip_body">Body</label>
                                <textarea name="tip_body" id="tip_body" class="form-control ckeditor" rows="5">{{ tip.body }}</textarea>
                            </div>
                            <input type="submit" value="Submit" class="btn btn-primary btn-lg">
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}