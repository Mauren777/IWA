{% extends 'layout.twig' %}

{% block body %}

    <div class="container my-5">
        <div class="row">
            <div class="col-md-12">
                <div class="card mb-5">
                    <div class="card-body">
                        <form>
                            <div class="form-group">
                                <label>ID</label>
                                <input class="form-control" type="text" placeholder="{{ article['$'].id }}" readonly>
                            </div>
                            <div class="form-group">
                                <label for="article_title">Title</label>
                                <input type="text" class="form-control" id="article_title" name="article_title" value="{{ article.title }}">
                            </div>
                            <div class="form-group">
                                <label for="article_date">Date</label>
                                <input type="text" class="form-control" id="article_date" name="article_date" value="{{ article.date }}">
                            </div>
                            <div class="form-group">
                                <label for="article_image">Image</label>
                                <input type="text" class="form-control" id="article_image" name="article_image" value="{{ article.image }}">
                            </div>
                            <div class="form-group">
                                <label for="article_body">Body</label>
                                <textarea name="article_body" id="article_body" class="form-control ckeditor" rows="5">{{ article.body }}</textarea>
                            </div>
                            <input type="submit" value="Submit" class="btn btn-primary btn-lg">
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}